set -e
set -o pipefail
VERSION="0.0.2"
help_dialoge="\nCYGO Desktop, Version $VERSION\n-h, --help\tShow this help dialoge and exit.\n-v, --version\tPrint the current version\n"
if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	echo -e "$help_dialoge"
	exit 0
elif [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	echo -e "\nCYGO Desktop, Version $VERSION\n"
	exit 0
elif [ -z "$1" ] || [ "$1" == "" ] || [ "$1" == " " ]; then
	if [ -f /home/$(users)/.config/cygo-first-run.flag ]; then
		python3 /usr/share/cygo-desktop/main.py &
	else
		touch /home/$(users)/.config/cygo-first-run.flag
		python3 /usr/share/cygo-desktop/main.py "FIRST-TIME-URL" &
	fi
fi
	

